                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="Computer"
                android:textColor="#6f6f6f"
                android:textSize="18sp" />

        </LinearLayout>


    </androidx.cardview.widget.CardView>

